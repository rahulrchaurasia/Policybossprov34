<?xml version="1.0" encoding="utf-8"?>
<resources>



    <!--TextView style-->
    <style name="TextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TextViewStyle.Large" parent="TextViewStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/header_dark_text</item>

    </style>

    <style name="TextViewStyle.Medium" parent="TextViewStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/header_light_text</item>
    </style>


    <style name="TextViewStyle.Small" parent="TextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/description_text</item>
    </style>

    <style name="TextViewStyle.VerySmall" parent="TextViewStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/description_text</item>
    </style>


    <!---->
    <style name="HeaderLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blue_border_lightblue_background</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/lightblue_border</item>
        <item name="android:padding">10dp</item>
    </style>


    <!--Dialog theme-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@null</item>
        <!--   <item name="windowBackground">@android:color/transparent</item>-->
    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <!--            <item name="android:windowBackground">@color/transparent_color</item>&ndash;&gt;-->

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation</item>-->


    </style>

    <style name="CustomDialogWithoutAnim" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:windowIsTranslucent">true</item>


        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation</item>-->


    </style>
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomTransLucent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <!--Credit card spinner style-->
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:background">@drawable/gradient_spinner</item>-->
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!--    // For File Chooser in Pff selection-->
    <style name="fileChooserName">
        <item name="android:drawablePadding">@dimen/list_item_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Theme.AppCompat.TranslucentDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/semi_transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>


    <style name="TextViewStyle.BannerBold" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyle.BannerLarge" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyle.BannerMedium" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyle.BannerRegular.small" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextStyle.Toolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.ToolbarSmall" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.ToolbarNormal" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.TextMedium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.TextLarge" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextStyle.TextSmall" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/description_text</item>
        <item name="android:textSize">10sp</item>
    </style>



    <style name="CustomHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@android:color/transparent</item>

    </style>

